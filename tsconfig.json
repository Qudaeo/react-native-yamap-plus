{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "outDir": "lib",
    "rootDir": "./src",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": ["example", "lib", "**/node_modules", "**/Pods"],
  "include": ["**/*.ts", "**/*.tsx"]
}
